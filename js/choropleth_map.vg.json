{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Employment Trends in Australian States (January 2024)",
  "width": 800,
  "height": 400,
  "projection": {"type": "mercator"},
  "data": {
    "url": "js/au-states.topojson",
    "format": {
      "type": "topojson",
      "feature": "states"
    }
  },
  "transform": [
    {
      "lookup": "properties.STATE_NAME",
      "from": {
        "data": {
          "url": "data/cleaned/January_2024_employed.csv"
        },
        "key": "State",
        "fields": [
          "Employed people",
          "Employment to population ratio",
          "Unemployment rate",
          "Underemployment rate",
          "Participation rate"
        ]
      }
    },
    {
      "calculate": "isValid(datum['Employed people']) ? +datum['Employed people'] : 0", 
      "as": "Employed people"
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "Employed people",
      "type": "quantitative",
      "scale": {"type": "linear"},
      "legend": {
        "title": "Number of Employed People"
      }
    },
    "tooltip": [
      {"field": "properties.STATE_NAME", "type": "nominal", "title": "State"},
      {"field": "Employed people", "type": "quantitative", "title": "Employed People"},
      {"field": "Employment to population ratio", "type": "quantitative", "title": "Employment to Population Ratio (%)"},
      {"field": "Unemployment rate", "type": "quantitative", "title": "Unemployment Rate (%)"},
      {"field": "Underemployment rate", "type": "quantitative", "title": "Underemployment Rate (%)"},
      {"field": "Participation rate", "type": "quantitative", "title": "Participation Rate (%)"}
    ]
  }
}
