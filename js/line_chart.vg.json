{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "description": "Small multiple charts showing both Employment and Unemployment over time with 'Total' instead of 'Persons'.",
  "vconcat": [
    {
      "title": "Number of Employed People",
      "data": {
        "url": "data/cleaned/Employed.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "fold": ["Persons", "Males", "Females"],
          "as": ["Demographic", "Employed People"]
        },
        {
          "calculate": "datum.Demographic == 'Persons' ? 'Total' : datum.Demographic",
          "as": "Demographic"
        }
      ],
      "mark": "line",
      "width": 700,
      "height": 300,
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "title": "Date"
        },
        "y": {
          "field": "Employed People",
          "type": "quantitative",
          "title": "Number of Employed People"
        },
        "color": {
          "field": "Demographic",
          "type": "nominal",
          "title": "Demographic",
          "scale": {
            "domain": ["Total", "Males", "Females"],
            "range": ["#1f77b4", "#ff7f0e", "#2ca02c"]  
          }
        },
        "tooltip": [
          {"field": "Date", "type": "temporal", "title": "Date"},
          {"field": "Employed People", "type": "quantitative", "title": "Employed People"},
          {"field": "Demographic", "type": "nominal", "title": "Demographic"}
        ]
      }
    },
    {
      "title": "Number of Unemployed People",
      "data": {
        "url": "data/cleaned/Unemployed.csv",
        "format": {"type": "csv"}
      },
      "transform": [
        {
          "fold": ["Persons", "Males", "Females"],
          "as": ["Demographic", "Unemployment Rate"]
        },
        {
          "calculate": "datum.Demographic == 'Persons' ? 'Total' : datum.Demographic",
          "as": "Demographic"
        }
      ],
      "mark": "line",
      "width": 700,
      "height": 300,
      "encoding": {
        "x": {
          "field": "Date",
          "type": "temporal",
          "title": "Date"
        },
        "y": {
          "field": "Unemployment Rate",
          "type": "quantitative",
          "title": "Number of Unemployed People"
        },
        "color": {
          "field": "Demographic",
          "type": "nominal",
          "title": "Demographic",
          "scale": {
            "domain": ["Total", "Males", "Females"],
            "range": ["#1f77b4", "#ff7f0e", "#2ca02c"]
          }
        },
        "tooltip": [
          {"field": "Date", "type": "temporal", "title": "Date"},
          {"field": "Unemployment Rate", "type": "quantitative", "title": "Unemployment Rate (%)"},
          {"field": "Demographic", "type": "nominal", "title": "Demographic"}
        ]
      }
    }
  ]
}
